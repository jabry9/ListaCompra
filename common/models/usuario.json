{
  "name": "Usuario",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "Nombre": {
      "type": "string",
      "required": true
    },
    "Apellidos": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "TieneLista": {
      "type": "hasOne",
      "model": "ListaFamiliar",
      "foreignKey": "Owner"
    },
    "Pertenece": {
      "type": "belongsTo",
      "model": "ListaFamiliar",
      "foreignKey": ""
    },
    "solicitud": {
      "type": "hasAndBelongsToMany",
      "model": "ListaFamiliar",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "aceptarSolicitudes"
    }
  ],
  "methods": {
    "prototype.aceptarSolicitudes": {
      "accepts": [
        {
          "arg": "context",
          "type": "object",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": [
        {
          "arg": "listaDeMiembros",
          "type": "array",
          "root": true,
          "description": "devolver un array con todos los miembros de la lista."
        }
      ],
      "description": "le enviamos un identificador de usuario y, si ese usuario tiene alguna solicitud en la lista de la que es miembro el actualmente autenticado, esta solicitud ser√° aprobada",
      "http": [
        {
          "path": "/aceptarSolicitudes",
          "verb": "put"
        }
      ]
    }
  }
}
